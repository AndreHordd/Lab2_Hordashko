<Window x:Class="Laboratory2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory2"
        xmlns:view="clr-namespace:Laboratory2.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="497" Width="530">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
                <RowDefinition Height= "auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Name="TEnterFirstName" Grid.Row="0" Margin="10,15,0,0" FontSize="16" Text="Введіть ім'я:"></TextBlock>
            <TextBox Name="TBoxFirstName" Grid.Row="1" Margin="10,10,0,0"></TextBox>
            <TextBlock Name="TEnterLastName" Grid.Row="2" Margin="10,15,0,0" FontSize="16" Text="Введіть прізвище:"></TextBlock>
            <TextBox Name="TBoxLastName" Grid.Row="3" Margin="10,10,0,0"></TextBox>
            <TextBlock Name="TEnterEmail" Grid.Row="4" Margin="10,15,0,0" FontSize="16" Text="Введіть почту:"></TextBlock>
            <TextBox Name="TBoxEmail" Grid.Row="5" Margin="10,10,0,0"></TextBox>
            <TextBlock Name="TEnterBirthDay" Grid.Row="6" Margin="10,15,0,0" FontSize="16" Text="Введіть дату народження:"/>
            <DatePicker x:Name="DPickDate" Grid.Row="7" Margin="10,10,10,0" FontSize="16" SelectedDate="{Binding SelectedDate, Mode=TwoWay}" ></DatePicker>
            <Button Name="BButton" Grid.Row="8" Height="25" Width="100" Margin="0,10" Content="Розрахувати" Command="{Binding BCommand, UpdateSourceTrigger=PropertyChanged}"></Button>

            <TextBlock Name="TFirstName" Grid.Row="9" Grid.Column="0" Margin="10,10,0,0" FontSize="16" Text="{Binding AgeText}"></TextBlock>
            <TextBlock Name="TLastName" Grid.Row="9" Margin="10,10,0,0" FontSize="16" Text="{Binding AgeText}"></TextBlock>
            <TextBlock Name="TEmail" Grid.Row="9" Margin="10,10,0,0" FontSize="16" Text="{Binding AgeText}"></TextBlock>
            <TextBlock Name="TBirthDay" Grid.Row="9" Margin="10,10,0,0" FontSize="16" Text="{Binding AgeText}"></TextBlock>

            <TextBlock Name="IsAdult " Grid.Row="9" Margin="10,10,0,0" FontSize="16" Text="{Binding AgeText}"></TextBlock>
            <TextBlock Name="TWesternHoroscope" Grid.Row="10" Margin="10,10,0,0" FontSize="16" Text="{Binding WesternHoroscope}"></TextBlock>
            <TextBlock Name="TChineseHoroscope" Grid.Row="11" Margin="10,10,0,0" FontSize="16" Text="{Binding ChineseHoroscope}"></TextBlock>
            <TextBlock Name="TIsBirthDay" Grid.Row="12" Margin="10,10,0,0" FontSize="20" HorizontalAlignment="Center" Foreground="Green" Text="{Binding HappyBirthday}"></TextBlock>
        </Grid>
    </Grid>
</Window>
